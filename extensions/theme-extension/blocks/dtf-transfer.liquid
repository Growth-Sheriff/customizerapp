<script src="{{ 'tshirt-modal.js' | asset_url }}" defer></script>
<script>
  document.addEventListener('DOMContentLoaded', function() {
    const productId = '{{ product_id }}';
    
    // Initialize DTF uploader
    if (window.DTFUploader) {
      window.DTFUploader.init(productId);
    }
    
    // Initialize T-Shirt modal
    if (window.TShirtModal) {
      window.TShirtModal.init();
    }
  });
</script>
{% endif %}

{% schema %}
{
  "name": "UL DTF Transfer",
  "target": "section",
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "Title",
      "default": "Upload Your Design"
    },
    {
      "type": "text",
      "id": "subtitle",
      "label": "Subtitle",
      "default": "High-quality DTF transfers for your projects"
    },
    {
      "type": "text",
      "id": "tshirt_price",
      "label": "T-Shirt Addon Price",
      "default": "$15.00"
    }
  ]
}
{% endschema %}
