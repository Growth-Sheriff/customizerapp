{% comment %}
  Upload Lift Pro - Classic Upload Block
  Mode: classic (Mod-2)
  Location: Product page
{% endcomment %}

{% liquid
  assign product_id = product.id
  assign variant_id = product.selected_or_first_available_variant.id
  assign upload_enabled = product.metafields.upload_lift.config.enabled | default: false
  assign upload_mode = product.metafields.upload_lift.config.mode | default: 'classic'
  assign max_size_mb = product.metafields.upload_lift.config.maxSizeMB | default: 25
  assign allowed_formats = product.metafields.upload_lift.config.allowedFormats | default: 'PNG, JPG, PDF'
%}

{% if upload_enabled and upload_mode == 'classic' %}
<div
  id="upload-lift-classic"
  class="upload-lift-container"
  data-product-id="{{ product_id }}"
  data-variant-id="{{ variant_id }}"
  data-mode="classic"
  data-max-size="{{ max_size_mb }}"
  data-allowed-formats="{{ allowed_formats }}"
  data-app-url="{{ shop.metafields.upload_lift.app_url | default: 'https://customizerapp.dev' }}"
>
  <!-- Step 1: Size Selection -->
  <div class="ul-step ul-step-size" data-step="1">
    <h3 class="ul-step-title">
      <span class="ul-step-number">1</span>
      {{ 'upload_lift.select_size' | t | default: 'Select Print Size' }}
    </h3>
    <div class="ul-size-options">
      <button type="button" class="ul-size-btn" data-size="small" data-width="4" data-height="4">
        Small (4" x 4")
      </button>
      <button type="button" class="ul-size-btn" data-size="medium" data-width="8" data-height="8">
        Medium (8" x 8")
      </button>
      <button type="button" class="ul-size-btn" data-size="large" data-width="12" data-height="14">
        Large (12" x 14")
      </button>
      <button type="button" class="ul-size-btn ul-size-custom" data-size="custom">
        Custom Size
      </button>
    </div>
    <div class="ul-custom-size" style="display: none;">
      <label>
        Width (inches):
        <input type="number" id="ul-custom-width" min="1" max="20" step="0.5" value="8">
      </label>
      <label>
        Height (inches):
        <input type="number" id="ul-custom-height" min="1" max="20" step="0.5" value="8">
      </label>
    </div>
  </div>

  <!-- Step 2: Upload -->
  <div class="ul-step ul-step-upload" data-step="2" data-locked="true">
    <h3 class="ul-step-title">
      <span class="ul-step-number">2</span>
      {{ 'upload_lift.upload_design' | t | default: 'Upload Your Design' }}
    </h3>
    <div class="ul-dropzone" id="ul-dropzone">
      <div class="ul-dropzone-content">
        <svg class="ul-upload-icon" viewBox="0 0 24 24" width="48" height="48">
          <path fill="currentColor" d="M19.35 10.04C18.67 6.59 15.64 4 12 4 9.11 4 6.6 5.64 5.35 8.04 2.34 8.36 0 10.91 0 14c0 3.31 2.69 6 6 6h13c2.76 0 5-2.24 5-5 0-2.64-2.05-4.78-4.65-4.96zM14 13v4h-4v-4H7l5-5 5 5h-3z"/>
        </svg>
        <p class="ul-dropzone-text">
          {{ 'upload_lift.drag_drop' | t | default: 'Drag & drop your file here' }}
        </p>
        <p class="ul-dropzone-subtext">or</p>
        <button type="button" class="ul-browse-btn">
          {{ 'upload_lift.browse_files' | t | default: 'Browse Files' }}
        </button>
        <p class="ul-format-hint">
          Accepted: {{ allowed_formats }} (Max {{ max_size_mb }}MB)
        </p>
      </div>
      <input type="file" id="ul-file-input" accept=".png,.jpg,.jpeg,.pdf,.ai,.eps,.svg" style="display: none;">
    </div>

    <!-- Upload Progress -->
    <div class="ul-progress" style="display: none;">
      <div class="ul-progress-bar">
        <div class="ul-progress-fill" style="width: 0%"></div>
      </div>
      <p class="ul-progress-text">Uploading... <span class="ul-progress-percent">0%</span></p>
    </div>
  </div>

  <!-- Step 3: Preview & Validation -->
  <div class="ul-step ul-step-preview" data-step="3" data-locked="true">
    <h3 class="ul-step-title">
      <span class="ul-step-number">3</span>
      {{ 'upload_lift.preview_validate' | t | default: 'Preview & Validation' }}
    </h3>
    <div class="ul-preview-container">
      <div class="ul-preview-image">
        <img id="ul-preview-img" src="" alt="Design Preview">
      </div>
      <div class="ul-validation-results">
        <h4>Preflight Check</h4>
        <ul class="ul-checks-list" id="ul-checks-list">
          <!-- Populated by JS -->
        </ul>
      </div>
    </div>

    <!-- Warning Banner -->
    <div class="ul-warning-banner" id="ul-warning-banner" style="display: none;">
      <svg viewBox="0 0 24 24" width="20" height="20">
        <path fill="currentColor" d="M1 21h22L12 2 1 21zm12-3h-2v-2h2v2zm0-4h-2v-4h2v4z"/>
      </svg>
      <span id="ul-warning-text">Some checks have warnings</span>
      <button type="button" class="ul-continue-warnings-btn" id="ul-continue-warnings">
        {{ 'upload_lift.continue_with_warnings' | t | default: 'Continue with Warnings' }}
      </button>
    </div>

    <!-- Error Banner -->
    <div class="ul-error-banner" id="ul-error-banner" style="display: none;">
      <svg viewBox="0 0 24 24" width="20" height="20">
        <path fill="currentColor" d="M12 2C6.48 2 2 6.48 2 12s4.48 10 10 10 10-4.48 10-10S17.52 2 12 2zm1 15h-2v-2h2v2zm0-4h-2V7h2v6z"/>
      </svg>
      <span id="ul-error-text">Upload blocked due to errors</span>
    </div>
  </div>

  <!-- Step 4: Confirm -->
  <div class="ul-step ul-step-confirm" data-step="4" data-locked="true">
    <h3 class="ul-step-title">
      <span class="ul-step-number">4</span>
      {{ 'upload_lift.confirm_add' | t | default: 'Confirm & Add to Cart' }}
    </h3>
    <div class="ul-confirm-summary">
      <div class="ul-summary-row">
        <span>Print Size:</span>
        <span id="ul-summary-size">-</span>
      </div>
      <div class="ul-summary-row">
        <span>File:</span>
        <span id="ul-summary-file">-</span>
      </div>
      <div class="ul-summary-row">
        <span>Status:</span>
        <span id="ul-summary-status">-</span>
      </div>
    </div>

    <label class="ul-approval-checkbox">
      <input type="checkbox" id="ul-approval-check">
      <span>
        {{ 'upload_lift.approval_text' | t | default: 'I confirm that my design is print-ready and I accept the terms.' }}
      </span>
    </label>

    <button type="button" class="ul-add-to-cart-btn" id="ul-add-to-cart" disabled>
      {{ 'upload_lift.add_to_cart' | t | default: 'Add to Cart' }}
    </button>
  </div>

  <!-- Hidden fields for cart -->
  <input type="hidden" name="properties[_upload_lift_id]" id="ul-prop-id" value="">
  <input type="hidden" name="properties[_upload_lift_mode]" id="ul-prop-mode" value="classic">
  <input type="hidden" name="properties[_upload_lift_preview]" id="ul-prop-preview" value="">
  <input type="hidden" name="properties[_upload_lift_hash]" id="ul-prop-hash" value="">
  <input type="hidden" name="properties[Design Size]" id="ul-prop-size" value="">
  <input type="hidden" name="properties[Design File]" id="ul-prop-filename" value="">
</div>

<style>
  .upload-lift-container {
    --ul-primary: #5c6ac4;
    --ul-success: #50b83c;
    --ul-warning: #f49342;
    --ul-error: #de3618;
    --ul-border: #dfe3e8;
    --ul-bg: #f9fafb;
    font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif;
    max-width: 600px;
    margin: 20px 0;
  }

  .ul-step {
    border: 1px solid var(--ul-border);
    border-radius: 8px;
    padding: 20px;
    margin-bottom: 16px;
    background: #fff;
    transition: opacity 0.3s, filter 0.3s;
  }

  .ul-step[data-locked="true"] {
    opacity: 0.5;
    pointer-events: none;
    filter: grayscale(0.5);
  }

  .ul-step-title {
    display: flex;
    align-items: center;
    gap: 12px;
    margin: 0 0 16px 0;
    font-size: 16px;
    font-weight: 600;
  }

  .ul-step-number {
    width: 28px;
    height: 28px;
    border-radius: 50%;
    background: var(--ul-primary);
    color: #fff;
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 14px;
  }

  .ul-size-options {
    display: grid;
    grid-template-columns: repeat(2, 1fr);
    gap: 12px;
  }

  .ul-size-btn {
    padding: 12px 16px;
    border: 2px solid var(--ul-border);
    border-radius: 8px;
    background: #fff;
    cursor: pointer;
    font-size: 14px;
    transition: border-color 0.2s, background 0.2s;
  }

  .ul-size-btn:hover {
    border-color: var(--ul-primary);
  }

  .ul-size-btn.active {
    border-color: var(--ul-primary);
    background: rgba(92, 106, 196, 0.1);
  }

  .ul-custom-size {
    margin-top: 12px;
    display: flex;
    gap: 16px;
  }

  .ul-custom-size label {
    display: flex;
    flex-direction: column;
    gap: 4px;
    font-size: 14px;
  }

  .ul-custom-size input {
    padding: 8px;
    border: 1px solid var(--ul-border);
    border-radius: 4px;
    width: 100px;
  }

  .ul-dropzone {
    border: 2px dashed var(--ul-border);
    border-radius: 8px;
    padding: 40px 20px;
    text-align: center;
    cursor: pointer;
    transition: border-color 0.2s, background 0.2s;
  }

  .ul-dropzone:hover,
  .ul-dropzone.dragover {
    border-color: var(--ul-primary);
    background: rgba(92, 106, 196, 0.05);
  }

  .ul-upload-icon {
    color: #919eab;
    margin-bottom: 12px;
  }

  .ul-dropzone-text {
    font-size: 16px;
    margin: 0 0 4px 0;
  }

  .ul-dropzone-subtext {
    color: #919eab;
    margin: 8px 0;
  }

  .ul-browse-btn {
    padding: 10px 24px;
    background: var(--ul-primary);
    color: #fff;
    border: none;
    border-radius: 4px;
    cursor: pointer;
    font-size: 14px;
  }

  .ul-format-hint {
    margin-top: 12px;
    font-size: 12px;
    color: #919eab;
  }

  .ul-progress {
    margin-top: 16px;
  }

  .ul-progress-bar {
    height: 8px;
    background: var(--ul-bg);
    border-radius: 4px;
    overflow: hidden;
  }

  .ul-progress-fill {
    height: 100%;
    background: var(--ul-primary);
    transition: width 0.3s;
  }

  .ul-progress-text {
    margin-top: 8px;
    font-size: 14px;
    text-align: center;
  }

  .ul-preview-container {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 20px;
  }

  @media (max-width: 600px) {
    .ul-preview-container {
      grid-template-columns: 1fr;
    }
  }

  .ul-preview-image {
    background: var(--ul-bg);
    border-radius: 8px;
    padding: 16px;
    display: flex;
    align-items: center;
    justify-content: center;
    min-height: 200px;
  }

  .ul-preview-image img {
    max-width: 100%;
    max-height: 250px;
    object-fit: contain;
  }

  .ul-validation-results h4 {
    margin: 0 0 12px 0;
    font-size: 14px;
  }

  .ul-checks-list {
    list-style: none;
    padding: 0;
    margin: 0;
  }

  .ul-checks-list li {
    display: flex;
    align-items: center;
    gap: 8px;
    padding: 8px 0;
    border-bottom: 1px solid var(--ul-border);
    font-size: 14px;
  }

  .ul-check-icon {
    width: 16px;
    height: 16px;
  }

  .ul-check-ok { color: var(--ul-success); }
  .ul-check-warn { color: var(--ul-warning); }
  .ul-check-error { color: var(--ul-error); }

  .ul-warning-banner,
  .ul-error-banner {
    display: flex;
    align-items: center;
    gap: 8px;
    padding: 12px 16px;
    border-radius: 4px;
    margin-top: 16px;
    font-size: 14px;
  }

  .ul-warning-banner {
    background: rgba(244, 147, 66, 0.1);
    color: var(--ul-warning);
    flex-wrap: wrap;
  }

  .ul-continue-warnings-btn {
    margin-left: auto;
    padding: 6px 12px;
    background: var(--ul-warning);
    color: #fff;
    border: none;
    border-radius: 4px;
    cursor: pointer;
    font-size: 12px;
    font-weight: 600;
    transition: background 0.2s;
  }

  .ul-continue-warnings-btn:hover {
    background: #d68030;
  }

  .ul-error-banner {
    background: rgba(222, 54, 24, 0.1);
    color: var(--ul-error);
  }

  .ul-confirm-summary {
    background: var(--ul-bg);
    border-radius: 8px;
    padding: 16px;
    margin-bottom: 16px;
  }

  .ul-summary-row {
    display: flex;
    justify-content: space-between;
    padding: 8px 0;
    border-bottom: 1px solid var(--ul-border);
    font-size: 14px;
  }

  .ul-summary-row:last-child {
    border-bottom: none;
  }

  .ul-approval-checkbox {
    display: flex;
    align-items: flex-start;
    gap: 8px;
    margin-bottom: 16px;
    font-size: 14px;
    cursor: pointer;
  }

  .ul-approval-checkbox input {
    margin-top: 2px;
  }

  .ul-add-to-cart-btn {
    width: 100%;
    padding: 14px;
    background: var(--ul-primary);
    color: #fff;
    border: none;
    border-radius: 8px;
    font-size: 16px;
    font-weight: 600;
    cursor: pointer;
    transition: background 0.2s, opacity 0.2s;
  }

  .ul-add-to-cart-btn:disabled {
    opacity: 0.5;
    cursor: not-allowed;
  }

  .ul-add-to-cart-btn:not(:disabled):hover {
    background: #4c5bb3;
  }
</style>

<script src="{{ 'upload-lift-core.js' | asset_url }}" defer></script>
{% else %}
  <!-- Upload Lift not enabled for this product -->
{% endif %}

{% schema %}
{
  "name": "Upload Lift - Classic",
  "target": "section",
  "settings": [
    {
      "type": "checkbox",
      "id": "show_title",
      "label": "Show section title",
      "default": true
    },
    {
      "type": "text",
      "id": "title",
      "label": "Title",
      "default": "Customize Your Design"
    }
  ]
}
{% endschema %}

