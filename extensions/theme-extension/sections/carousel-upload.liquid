{% comment %}
  Upload Lift - 3D Product Carousel with Custom Upload
  =====================================================
  Features:
  - 4D hover effects, gold foil header
  - Per-product Custom Upload toggle
  - Upload modal with sheet size & quantity
  - Add to Cart / Checkout integration
  
  Version: 1.0.0
{% endcomment %}

{{ 'carousel-upload.css' | asset_url | stylesheet_tag }}

<section class="ul-carousel-section" id="ulCarousel-{{ section.id }}" data-section-id="{{ section.id }}" data-api-base="{{ section.settings.upload_api_base | default: 'https://customizerapp.dev' }}" data-autoplay="{{ section.settings.autoplay }}">
  
  <!-- Banner Slider -->
  {% if section.settings.show_banners %}
  <div class="ul-banner-slider-wrapper">
    <div class="ul-banner-slider" id="ulBannerSlider-{{ section.id }}">
      {% for block in section.blocks %}
        {% if block.type == 'banner' %}
        <div class="ul-banner-slide{% if forloop.first %} active{% endif %}" data-index="{{ forloop.index0 }}" {{ block.shopify_attributes }}>
          <div class="ul-banner-content" style="
            {% if block.settings.bg_image != blank %}background-image: url('{{ block.settings.bg_image | image_url: width: 1920 }}');{% endif %}
            background-color: {{ block.settings.bg_color | default: '#7367f0' }};
          ">
            <div class="ul-banner-overlay" style="background: {{ block.settings.overlay_color | default: 'rgba(0,0,0,0.3)' }};"></div>
            <div class="ul-banner-text" style="color: {{ block.settings.text_color | default: '#ffffff' }};">
              {% if block.settings.badge_text != blank %}
              <span class="ul-banner-badge">{{ block.settings.badge_text }}</span>
              {% endif %}
              <h2 class="ul-banner-heading">{{ block.settings.heading | default: 'Amazing Deals' }}</h2>
              {% if block.settings.subheading != blank %}
              <p class="ul-banner-subheading">{{ block.settings.subheading }}</p>
              {% endif %}
              {% if block.settings.button_text != blank %}
              <a href="{{ block.settings.button_link }}" class="ul-banner-btn" style="background: {{ block.settings.button_bg | default: '#ffffff' }}; color: {{ block.settings.button_color | default: '#7367f0' }};">
                {{ block.settings.button_text }}
                <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><path d="M5 12h14M12 5l7 7-7 7"/></svg>
              </a>
              {% endif %}
            </div>
          </div>
        </div>
        {% endif %}
      {% endfor %}
    </div>
    
    <!-- Banner Navigation -->
    <button class="ul-banner-nav ul-banner-prev" aria-label="Previous Banner">
      <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><path d="M15 18l-6-6 6-6"/></svg>
    </button>
    <button class="ul-banner-nav ul-banner-next" aria-label="Next Banner">
      <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><path d="M9 18l6-6-6-6"/></svg>
    </button>
    
    <!-- Banner Dots -->
    <div class="ul-banner-dots" id="ulBannerDots-{{ section.id }}"></div>
  </div>
  {% endif %}

  <!-- 4D Gold Foil Header -->
  {% if section.settings.show_header %}
  <div class="ul-section-header-4d">
    <div class="ul-header-deco-wrap">
      <div class="ul-header-side-deco ul-side-left">
        <span class="ul-deco-diamond"></span>
        <span class="ul-deco-line"></span>
        <span class="ul-deco-dot"></span>
      </div>
      
      <div class="ul-header-4d-container">
        <span class="ul-gold-corner ul-corner-tl"></span>
        <span class="ul-gold-corner ul-corner-tr"></span>
        <span class="ul-gold-corner ul-corner-bl"></span>
        <span class="ul-gold-corner ul-corner-br"></span>
        
        <div class="ul-header-sparkles">
          {% for i in (1..20) %}
            <div class="ul-sparkle" style="--delay: {{ i | times: 0.15 }}s; --x: {{ i | times: 5 }}%;"></div>
          {% endfor %}
        </div>
        <div class="ul-header-4d-inner">
          <span class="ul-header-tag">{{ section.settings.header_tag | default: 'âœ¨ LIMITED TIME' }}</span>
          <h2 class="ul-header-title-4d">{{ section.settings.title | default: 'CUSTOM PRODUCTS' }}</h2>
          <p class="ul-header-subtitle">{{ section.settings.subtitle | default: 'Upload your design and create unique products' }}</p>
        </div>
      </div>
      
      <div class="ul-header-side-deco ul-side-right">
        <span class="ul-deco-dot"></span>
        <span class="ul-deco-line"></span>
        <span class="ul-deco-diamond"></span>
      </div>
    </div>
  </div>
  {% endif %}

  {% if section.settings.show_carousel %}
  <div class="ul-carousel-container">
    <!-- 3D Carousel -->
    <div class="ul-carousel-3d-wrapper">
      <div class="ul-carousel-3d" id="ulCarousel3d-{{ section.id }}">
        {% for block in section.blocks %}
          {% if block.type == 'product' %}
            {% assign product = block.settings.product %}
            {% assign enable_upload = block.settings.enable_custom_upload %}
            <div class="ul-carousel-3d-item" data-index="{{ forloop.index0 }}" {{ block.shopify_attributes }}>
              <div class="ul-product-card-4d" 
                   data-product-id="{{ product.id }}"
                   data-product-handle="{{ product.handle }}"
                   data-product-title="{{ product.title | escape }}"
                   data-product-price="{{ product.price }}"
                   data-product-image="{{ product.featured_image | image_url: width: 500 }}"
                   data-enable-upload="{{ enable_upload }}"
                   data-variant-id="{{ product.first_available_variant.id }}">
                
                <!-- 4D Layers -->
                <div class="ul-card-4d-layers">
                  <div class="ul-layer ul-layer-1"></div>
                  <div class="ul-layer ul-layer-2"></div>
                  <div class="ul-layer ul-layer-3"></div>
                </div>
                
                <div class="ul-card-inner">
                  <!-- Badges -->
                  <div class="ul-card-badges">
                    {% if enable_upload %}
                      <span class="ul-badge ul-badge-upload">
                        <svg width="12" height="12" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><path d="M21 15v4a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2v-4"/><polyline points="17 8 12 3 7 8"/><line x1="12" y1="3" x2="12" y2="15"/></svg>
                        Custom
                      </span>
                    {% endif %}
                    {% if block.settings.show_4d_badge %}
                      <span class="ul-badge ul-badge-4d">
                        <span class="ul-badge-4d-text">4D</span>
                      </span>
                    {% endif %}
                    {% if product.compare_at_price > product.price %}
                      {% assign discount = product.compare_at_price | minus: product.price | times: 100.0 | divided_by: product.compare_at_price | round %}
                      <span class="ul-badge ul-badge-discount">{{ discount }}% OFF</span>
                    {% endif %}
                    {% if block.settings.custom_badge != blank %}
                      <span class="ul-badge ul-badge-custom" style="background: {{ block.settings.badge_color }};">{{ block.settings.custom_badge }}</span>
                    {% endif %}
                  </div>
                  
                  <!-- Wishlist -->
                  <button class="ul-wishlist-btn" aria-label="Add to wishlist">
                    <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><path d="M20.84 4.61a5.5 5.5 0 0 0-7.78 0L12 5.67l-1.06-1.06a5.5 5.5 0 0 0-7.78 7.78l1.06 1.06L12 21.23l7.78-7.78 1.06-1.06a5.5 5.5 0 0 0 0-7.78z"/></svg>
                  </button>
                  
                  <!-- Product Image with 4D Effect -->
                  <div class="ul-product-image-4d">
                    <div class="ul-image-4d-container">
                      {% if product.featured_image %}
                        <img src="{{ product.featured_image | image_url: width: 500 }}" 
                             alt="{{ product.title }}"
                             width="500" height="500"
                             loading="lazy"
                             class="ul-product-img">
                      {% else %}
                        <div class="ul-placeholder-img">
                          <svg width="48" height="48" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1"><rect x="3" y="3" width="18" height="18" rx="2" ry="2"/><circle cx="8.5" cy="8.5" r="1.5"/><polyline points="21 15 16 10 5 21"/></svg>
                        </div>
                      {% endif %}
                      
                      <!-- 4D Floating Elements -->
                      <div class="ul-floating-elements">
                        <div class="ul-float-circle ul-float-1"></div>
                        <div class="ul-float-circle ul-float-2"></div>
                        <div class="ul-float-circle ul-float-3"></div>
                      </div>
                      
                      <!-- Glow Effect -->
                      <div class="ul-image-glow"></div>
                    </div>
                    
                    <!-- Perfect For Label -->
                    {% if block.settings.perfect_for != blank %}
                      <div class="ul-perfect-for-label">
                        <span>Perfect for:</span>
                        <strong>{{ block.settings.perfect_for }}</strong>
                      </div>
                    {% endif %}
                  </div>
                  
                  <!-- Product Info -->
                  <div class="ul-product-info">
                    {% if product.vendor %}
                      <span class="ul-product-vendor">{{ product.vendor }}</span>
                    {% endif %}
                    
                    <h3 class="ul-product-title">{{ product.title | default: 'Product Title' | truncate: 50 }}</h3>
                    
                    <!-- Rating -->
                    <div class="ul-product-rating">
                      {% assign rating = block.settings.rating | default: 5 %}
                      <div class="ul-stars">
                        {% for i in (1..5) %}
                          {% if i <= rating %}
                            <svg width="14" height="14" viewBox="0 0 24 24" fill="currentColor"><polygon points="12 2 15.09 8.26 22 9.27 17 14.14 18.18 21.02 12 17.77 5.82 21.02 7 14.14 2 9.27 8.91 8.26 12 2"/></svg>
                          {% else %}
                            <svg width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><polygon points="12 2 15.09 8.26 22 9.27 17 14.14 18.18 21.02 12 17.77 5.82 21.02 7 14.14 2 9.27 8.91 8.26 12 2"/></svg>
                          {% endif %}
                        {% endfor %}
                      </div>
                      <span class="ul-rating-count">({{ block.settings.review_count | default: 0 }})</span>
                    </div>
                    
                    <!-- Price -->
                    <div class="ul-product-price">
                      {% if product.compare_at_price > product.price %}
                        <span class="ul-compare-price">{{ product.compare_at_price | money }}</span>
                      {% endif %}
                      <span class="ul-current-price">{{ product.price | money }}</span>
                    </div>
                    
                    <!-- Custom Upload Button (if enabled) -->
                    {% if block.settings.show_upload_button %}
                    <div class="ul-upload-area">
                      <button class="ul-upload-btn" data-product-id="{{ product.id }}">
                        <svg width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><path d="M21 15v4a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2v-4"/><polyline points="17 8 12 3 7 8"/><line x1="12" y1="3" x2="12" y2="15"/></svg>
                        <span>{{ block.settings.upload_button_text | default: 'Upload Design' }}</span>
                      </button>
                    </div>
                    {% endif %}
                    
                    <!-- Add to Cart -->
                    <div class="ul-product-actions">
                      {% if product.available %}
                        <button class="ul-btn ul-add-to-cart-btn" data-variant-id="{{ product.first_available_variant.id }}">
                          <svg width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><circle cx="9" cy="21" r="1"/><circle cx="20" cy="21" r="1"/><path d="M1 1h4l2.68 13.39a2 2 0 0 0 2 1.61h9.72a2 2 0 0 0 2-1.61L23 6H6"/></svg>
                          <span>Add to Cart</span>
                        </button>
                      {% else %}
                        <button class="ul-btn ul-sold-out" disabled>
                          <span>Sold Out</span>
                        </button>
                      {% endif %}
                    </div>
                  </div>
                </div>
              </div>
            </div>
          {% endif %}
        {% endfor %}
        
        {% if section.blocks.size == 0 %}
          <!-- Demo Products when no blocks -->
          {% for i in (1..5) %}
            <div class="ul-carousel-3d-item" data-index="{{ forloop.index0 }}">
              <div class="ul-product-card-4d">
                <div class="ul-card-4d-layers">
                  <div class="ul-layer ul-layer-1"></div>
                  <div class="ul-layer ul-layer-2"></div>
                  <div class="ul-layer ul-layer-3"></div>
                </div>
                <div class="ul-card-inner">
                  <div class="ul-card-badges">
                    <span class="ul-badge ul-badge-upload">
                      <svg width="12" height="12" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><path d="M21 15v4a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2v-4"/><polyline points="17 8 12 3 7 8"/><line x1="12" y1="3" x2="12" y2="15"/></svg>
                      Custom
                    </span>
                    <span class="ul-badge ul-badge-4d"><span class="ul-badge-4d-text">4D</span></span>
                    <span class="ul-badge ul-badge-discount">20% OFF</span>
                  </div>
                  <button class="ul-wishlist-btn">
                    <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><path d="M20.84 4.61a5.5 5.5 0 0 0-7.78 0L12 5.67l-1.06-1.06a5.5 5.5 0 0 0-7.78 7.78l1.06 1.06L12 21.23l7.78-7.78 1.06-1.06a5.5 5.5 0 0 0 0-7.78z"/></svg>
                  </button>
                  <div class="ul-product-image-4d">
                    <div class="ul-image-4d-container">
                      <div class="ul-placeholder-img">
                        <svg width="48" height="48" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1"><rect x="3" y="3" width="18" height="18" rx="2" ry="2"/><circle cx="8.5" cy="8.5" r="1.5"/><polyline points="21 15 16 10 5 21"/></svg>
                      </div>
                      <div class="ul-floating-elements">
                        <div class="ul-float-circle ul-float-1"></div>
                        <div class="ul-float-circle ul-float-2"></div>
                      </div>
                      <div class="ul-image-glow"></div>
                    </div>
                  </div>
                  <div class="ul-product-info">
                    <span class="ul-product-vendor">Brand Name</span>
                    <h3 class="ul-product-title">Sample Product {{ i }}</h3>
                    <div class="ul-product-rating">
                      <div class="ul-stars">
                        <svg width="14" height="14" viewBox="0 0 24 24" fill="currentColor"><polygon points="12 2 15.09 8.26 22 9.27 17 14.14 18.18 21.02 12 17.77 5.82 21.02 7 14.14 2 9.27 8.91 8.26 12 2"/></svg>
                        <svg width="14" height="14" viewBox="0 0 24 24" fill="currentColor"><polygon points="12 2 15.09 8.26 22 9.27 17 14.14 18.18 21.02 12 17.77 5.82 21.02 7 14.14 2 9.27 8.91 8.26 12 2"/></svg>
                        <svg width="14" height="14" viewBox="0 0 24 24" fill="currentColor"><polygon points="12 2 15.09 8.26 22 9.27 17 14.14 18.18 21.02 12 17.77 5.82 21.02 7 14.14 2 9.27 8.91 8.26 12 2"/></svg>
                        <svg width="14" height="14" viewBox="0 0 24 24" fill="currentColor"><polygon points="12 2 15.09 8.26 22 9.27 17 14.14 18.18 21.02 12 17.77 5.82 21.02 7 14.14 2 9.27 8.91 8.26 12 2"/></svg>
                        <svg width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><polygon points="12 2 15.09 8.26 22 9.27 17 14.14 18.18 21.02 12 17.77 5.82 21.02 7 14.14 2 9.27 8.91 8.26 12 2"/></svg>
                      </div>
                      <span class="ul-rating-count">(128)</span>
                    </div>
                    <div class="ul-product-price">
                      <span class="ul-compare-price">$9.99</span>
                      <span class="ul-current-price">$4.99</span>
                    </div>
                    <div class="ul-upload-area">
                      <button class="ul-upload-btn">
                        <svg width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><path d="M21 15v4a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2v-4"/><polyline points="17 8 12 3 7 8"/><line x1="12" y1="3" x2="12" y2="15"/></svg>
                        <span>Upload Design</span>
                      </button>
                    </div>
                    <div class="ul-product-actions">
                      <button class="ul-btn ul-add-to-cart-btn">
                        <svg width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><circle cx="9" cy="21" r="1"/><circle cx="20" cy="21" r="1"/><path d="M1 1h4l2.68 13.39a2 2 0 0 0 2 1.61h9.72a2 2 0 0 0 2-1.61L23 6H6"/></svg>
                        <span>Add to Cart</span>
                      </button>
                    </div>
                  </div>
                </div>
              </div>
            </div>
          {% endfor %}
        {% endif %}
      </div>
      
      <!-- Navigation -->
      <button class="ul-carousel-nav ul-carousel-prev" aria-label="Previous">
        <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><path d="M15 18l-6-6 6-6"/></svg>
      </button>
      <button class="ul-carousel-nav ul-carousel-next" aria-label="Next">
        <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><path d="M9 18l6-6-6-6"/></svg>
      </button>
      
      <!-- Dots -->
      <div class="ul-carousel-dots"></div>
    </div>
  </div>
  {% endif %}
  
  <!-- Ambient Particles -->
  <div class="ul-ambient-particles"></div>
</section>

<!-- Upload Modal -->
<div class="ul-upload-modal-overlay" id="ulUploadModal">
  <div class="ul-upload-modal">
    <!-- Modal Header -->
    <div class="ul-upload-modal-header">
      <h3 class="ul-upload-modal-title">
        <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><path d="M21 15v4a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2v-4"/><polyline points="17 8 12 3 7 8"/><line x1="12" y1="3" x2="12" y2="15"/></svg>
        Custom Upload
      </h3>
      <button class="ul-upload-modal-close" id="ulUploadModalClose">
        <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><line x1="18" y1="6" x2="6" y2="18"/><line x1="6" y1="6" x2="18" y2="18"/></svg>
      </button>
    </div>
    
    <!-- Modal Body -->
    <div class="ul-upload-modal-body">
      <!-- Product Info -->
      <div class="ul-modal-product-info">
        <img src="" alt="" class="ul-modal-product-image" id="ulModalProductImage">
        <div class="ul-modal-product-details">
          <h4 class="ul-modal-product-title" id="ulModalProductTitle">Product Name</h4>
          <span class="ul-modal-product-price" id="ulModalProductPrice">$0.00</span>
        </div>
      </div>
      
      <!-- Upload Zone -->
      <div class="ul-modal-upload-zone" id="ulModalUploadZone">
        <input type="file" class="ul-modal-file-input" id="ulModalFileInput" accept=".png,.jpg,.jpeg,.webp,.pdf,.svg" hidden>
        <div class="ul-upload-zone-content">
          <div class="ul-upload-zone-icon">
            <svg width="48" height="48" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5"><path d="M21 15v4a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2v-4"/><polyline points="17 8 12 3 7 8"/><line x1="12" y1="3" x2="12" y2="15"/></svg>
          </div>
          <p class="ul-upload-zone-text">Drag & drop your design here</p>
          <p class="ul-upload-zone-subtext">or click to browse</p>
          <span class="ul-upload-zone-formats">PNG, JPG, PDF, AI, EPS, SVG (max 50MB)</span>
        </div>
      </div>
      
      <!-- Upload Preview (hidden by default) -->
      <div class="ul-modal-upload-preview" id="ulModalUploadPreview" style="display: none;">
        <img src="" alt="Preview" class="ul-modal-preview-image" id="ulModalPreviewImage">
        <button class="ul-modal-remove-upload" id="ulModalRemoveUpload">
          <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><line x1="18" y1="6" x2="6" y2="18"/><line x1="6" y1="6" x2="18" y2="18"/></svg>
          Remove
        </button>
        <div class="ul-modal-file-info">
          <span class="ul-file-name ul-modal-file-name" id="ulModalFileName">design.png</span>
          <span class="ul-file-size ul-modal-file-size" id="ulModalFileSize">2.5 MB</span>
        </div>
      </div>
      
      <!-- Options -->
      <div class="ul-modal-options">
        <!-- Sheet Size -->
        <div class="ul-modal-option-group">
          <label class="ul-modal-option-label">Sheet Size</label>
          <div class="ul-modal-size-grid" id="ulModalSizeGrid">
            <button class="ul-modal-size-btn active" data-size="22x6" data-price="7.50">
              <span class="ul-size-name">22" x 6"</span>
              <span class="ul-size-price">$7.50</span>
            </button>
            <button class="ul-modal-size-btn" data-size="22x12" data-price="12.00">
              <span class="ul-size-name">22" x 12"</span>
              <span class="ul-size-price">$12.00</span>
            </button>
            <button class="ul-modal-size-btn" data-size="22x24" data-price="22.00">
              <span class="ul-size-name">22" x 24"</span>
              <span class="ul-size-price">$22.00</span>
            </button>
            <button class="ul-modal-size-btn" data-size="22x60" data-price="50.00">
              <span class="ul-size-name">22" x 60"</span>
              <span class="ul-size-price">$50.00</span>
            </button>
          </div>
        </div>
        
        <!-- Quantity -->
        <div class="ul-modal-option-group">
          <label class="ul-modal-option-label">Quantity</label>
          <div class="ul-modal-quantity">
            <button class="ul-modal-qty-btn ul-qty-minus" id="ulModalQtyMinus">âˆ’</button>
            <input type="number" class="ul-modal-qty-input" id="ulModalQtyInput" value="1" min="1" max="99">
            <button class="ul-modal-qty-btn ul-qty-plus" id="ulModalQtyPlus">+</button>
          </div>
        </div>
      </div>
      
      <!-- Total -->
      <div class="ul-modal-total">
        <span class="ul-modal-total-label">Total:</span>
        <span class="ul-modal-total-price" id="ulModalTotalPrice">$7.50</span>
      </div>
    </div>
    
    <!-- Modal Footer -->
    <div class="ul-upload-modal-footer">
      <button class="ul-modal-btn ul-modal-btn-secondary" id="ulModalAddToCart" disabled>
        <svg width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><circle cx="9" cy="21" r="1"/><circle cx="20" cy="21" r="1"/><path d="M1 1h4l2.68 13.39a2 2 0 0 0 2 1.61h9.72a2 2 0 0 0 2-1.61L23 6H6"/></svg>
        Add to Cart
      </button>
      <button class="ul-modal-btn ul-modal-btn-primary" id="ulModalCheckout" disabled>
        <svg width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><path d="M9 21H5a2 2 0 0 1-2-2V5a2 2 0 0 1 2-2h4"/><polyline points="16 17 21 12 16 7"/><line x1="21" y1="12" x2="9" y2="12"/></svg>
        Checkout Now
      </button>
    </div>
