{% comment %}
  Upload Lift - Cart Upload Display Snippet
  =========================================
  Shows uploaded design info under cart line items

  USAGE: Add this to your cart.liquid or cart-template.liquid:
  {% render 'ul-cart-upload-display', item: item %}

  Place it inside your line item loop, after the product title/details area.

  Example integration in cart.liquid:

  {% for item in cart.items %}
    <div class="cart-item">
      <img src="{{ item.image | image_url: width: 100 }}">
      <div class="cart-item-details">
        <h3>{{ item.product.title }}</h3>
        <p>{{ item.variant.title }}</p>

        {%- comment -%} ADD THIS LINE {%- endcomment -%}
        {% render 'ul-cart-upload-display', item: item %}

        <p>{{ item.final_line_price | money }}</p>
      </div>
    </div>
  {% endfor %}

  Version: 1.0.0
{% endcomment %}

{% comment %} Check if this item has upload properties {% endcomment %}
{%- assign upload_id = item.properties['_ul_upload_id'] -%}
{%- assign design_file = item.properties['_ul_design_file'] | default: item.properties['File Name'] | default: item.properties['Design Name'] -%}
{%- assign is_uploaded = item.properties['_ul_uploaded'] -%}
{%- assign uploaded_file_url = item.properties['Uploaded File'] | default: item.properties['_ul_upload_url'] -%}

{%- if upload_id != blank or is_uploaded == 'true' -%}
<style>
  .ul-cart-upload-info {
    display: flex;
    align-items: center;
    gap: 10px;
    margin-top: 8px;
    padding: 10px 12px;
    background: linear-gradient(135deg, #f0f9ff 0%, #e0f2fe 100%);
    border: 1px solid #bae6fd;
    border-radius: 8px;
    font-size: 13px;
  }
  .ul-cart-upload-icon {
    width: 36px;
    height: 36px;
    border-radius: 6px;
    display: flex;
    align-items: center;
    justify-content: center;
    background: #dbeafe;
    color: #1e40af;
    flex-shrink: 0;
  }
  .ul-cart-upload-details {
    flex: 1;
    min-width: 0;
  }
  .ul-cart-upload-filename {
    font-weight: 600;
    color: #1e40af;
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
    display: block;
    max-width: 200px;
  }
  .ul-cart-upload-status {
    font-size: 11px;
    color: #64748b;
    display: flex;
    align-items: center;
    gap: 4px;
    margin-top: 2px;
  }
  .ul-cart-upload-status .dot {
    width: 6px;
    height: 6px;
    border-radius: 50%;
    background: #22c55e;
  }
  .ul-cart-upload-badge {
    display: inline-flex;
    align-items: center;
    gap: 4px;
    padding: 3px 8px;
    background: #dbeafe;
    color: #1e40af;
    border-radius: 12px;
    font-size: 10px;
    font-weight: 600;
    text-transform: uppercase;
  }
</style>

<div class="ul-cart-upload-info" data-upload-id="{{ upload_id }}">
  <div class="ul-cart-upload-icon">
    <svg width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
      <path d="M14 2H6a2 2 0 0 0-2 2v16a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V8z"></path>
      <polyline points="14 2 14 8 20 8"></polyline>
      <line x1="16" y1="13" x2="8" y2="13"></line>
      <line x1="16" y1="17" x2="8" y2="17"></line>
    </svg>
  </div>
  <div class="ul-cart-upload-details">
    <span class="ul-cart-upload-filename" title="{{ design_file | default: 'Custom Design' }}">
      {{ design_file | default: 'Custom Design' | truncate: 25 }}
    </span>
    <div class="ul-cart-upload-status">
      <span class="dot"></span>
      <span>Design attached</span>
    </div>
  </div>
  <span class="ul-cart-upload-badge">
    <svg width="10" height="10" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="3">
      <polyline points="20 6 9 17 4 12"></polyline>
    </svg>
    Custom
  </span>
</div>
{%- endif -%}
