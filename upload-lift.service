[Unit]
Description=Upload Lift Pro - Shopify Customizer App
After=network.target postgresql.service redis-server.service

[Service]
Type=simple
User=www-data
Group=www-data
WorkingDirectory=/var/www/upload-lift
Environment=NODE_ENV=production
Environment=PORT=3000
ExecStart=/usr/bin/npx remix-serve ./build/server/index.js
Restart=always
RestartSec=10
StandardOutput=journal
StandardError=journal
SyslogIdentifier=upload-lift

# Security
NoNewPrivileges=true
ProtectSystem=strict
ProtectHome=true
ReadWritePaths=/var/www/upload-lift

[Install]
WantedBy=multi-user.target

