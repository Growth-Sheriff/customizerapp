# ===========================================
# 3D Customizer - Environment Variables
# ===========================================
# Copy this file to .env and fill in the values

# ─────────────────────────────────────────────
# Shopify App Credentials (from Partner Dashboard)
# ─────────────────────────────────────────────
SHOPIFY_API_KEY=your_shopify_api_key_here
SHOPIFY_API_SECRET=your_shopify_api_secret_here
SHOPIFY_APP_URL=https://customizerapp.dev
SCOPES=read_products,write_products,read_orders,write_orders,read_customers

# Bunny.net Storage
BUNNY_STORAGE_ZONE=customizerappdev
BUNNY_API_KEY=your_bunny_api_key
BUNNY_CDN_URL=https://customizerappdev.b-cdn.net
BUNNY_STORAGE_HOST=storage.bunnycdn.com

# ─────────────────────────────────────────────
# Database (PostgreSQL 16)
# ─────────────────────────────────────────────
DATABASE_URL=postgresql://upload_lift:upload_lift_2025_secure@localhost:5432/upload_lift?schema=public

# ─────────────────────────────────────────────
# Redis (Cache & Queue)
# ─────────────────────────────────────────────
REDIS_URL=redis://localhost:6379

# ─────────────────────────────────────────────
# Session
# ─────────────────────────────────────────────
SESSION_SECRET=upload-lift-session-2025-super-secure-key-change-in-production

# ─────────────────────────────────────────────
# Storage Configuration
# ─────────────────────────────────────────────
# Default storage provider: bunny | local | r2
DEFAULT_STORAGE_PROVIDER=bunny

# Local Storage (fallback)
LOCAL_STORAGE_PATH=./uploads
SECRET_KEY=your-hmac-secret-key-for-signed-urls

# Bunny.net Storage (PRIMARY - recommended)
BUNNY_STORAGE_ZONE=customizerappdev
BUNNY_API_KEY=your-bunny-storage-api-key
BUNNY_CDN_URL=https://customizerappdev.b-cdn.net

# Cloudflare R2 (optional)
R2_ACCOUNT_ID=your_account_id
R2_ACCESS_KEY_ID=your_access_key
R2_SECRET_ACCESS_KEY=your_secret_key
R2_BUCKET_NAME=upload-lift
R2_PUBLIC_URL=https://your-bucket.r2.dev

# ─────────────────────────────────────────────
# App Settings
# ─────────────────────────────────────────────
NODE_ENV=production
PORT=3000
